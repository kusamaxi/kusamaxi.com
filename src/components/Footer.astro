---
import { Icon } from "astro-icon/components";
import data from "~/data/sites";

type Social = {
	url: string;
	icon: string;
	label: string;
};

const socials: Social[] = [
	{ url: data.github, icon: "mdi:github", label: "GitHub" },
	{ url: data.twitter, icon: "mdi:twitter", label: "Twitter" },
	{ url: `mailto:${data.email}`, icon: "mdi:mail", label: "Email" },
	{ url: "/rss.xml", icon: "mdi:rss", label: "RSS Feed" },
];
---

<footer
	class="relative mt-12 text-center pt-8 pb-30 md:pb-10 px-1 bg-white border-t-2 border-rose-200 transition-property-filter ease-out duration-200 font-heading"
>
	<div class="grid grid-cols-4 items-center justify-items-center max-w-[280px] mx-auto mb-8">
		{
			socials.map((s) => (
				
					class="text-zinc-600 hover:text-rose-600 transition-colors"
					href={s.url}
					target={s.url.startsWith('/') ? '_self' : '_blank'}
					rel={s.url.startsWith('/') ? '' : 'norel noreferrer'}
					aria-label={s.label}
				>
					<Icon class="w-8 h-8 text-current" name={s.icon} />
				</a>
			))
		}
	</div>
	<p class="leading-relaxed text-zinc-600 text-lg">
		<a class="text-rose-700 underline decoration-dashed decoration-offset-4" href={`${data.github}/kusamaxi.com`}>
			fork this
		</a>
		• design by
		<a class="text-rose-700 underline decoration-dashed decoration-offset-4" href="https://elianiva.my.id/">
			elianiva
		</a>
	</p>
	<p class="leading-relaxed text-zinc-500 text-base">
		no rights reserved • {new Date().getFullYear()}
	</p>
</footer>
